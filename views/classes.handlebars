<!DOCTYPE html>
<html>

<head>
    <title>Planlet - Class Selection</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap css -->
    <link href="/css/bootstrap.css" rel="stylesheet" media="screen">
    <!-- Theme css -->
    <link href="/css/colorfrog.css" rel="stylesheet" media="screen">

    <link href='http://fonts.googleapis.com/css?family=PT+Sans:400,700,400italic,700italic' rel='stylesheet'
        type='text/css'>
    <link href="/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/respond.min.js"></script>

    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="/js/jquery.fitvids.js"></script>
    <script src="/js/colorfrog.js"></script>
    <link rel="stylesheet" href="/css/planlet.css">
    <link rel="stylesheet" href="/css/classes.css">

</head>

<body class="blue">

    <div class="container" style="padding: 0px;">


        <a href="/userinfo"> <button class="settings"> </button> </a>

    </div> <!-- //end container -->

    <div class="jumbotron">
        <div class="container">
            <h4>Here are the classes you need that will be offered next quarter.</h5>
                <h6>Select 2-6 classes you would like to take.</h6>
                    <button class="btn btn-small clear" style="font-size: 10px;" onclick="location.reload()">Clear Info</button>
        </div>
    </div> <!-- //end hero-unit --> 

    <h5 id="lblMajorClasses">{{majorName}}</h5>
    <div class="classDiv" id="majorClasses">
        {{#each COGS}}
        <h4 class="className">{{text}}</h4>
        <button class="addButt">+</button>
        <button class="finishedButt">-</button>
        {{/each}}
    </div> 

    <h5 id="lblMinorClasses">Minor:</h5>
    <div class="classDiv" id="minorClasses">
        {{#each minorClasses}}
        <h4 class="className">{{text}}</h4>
        <button class="addButt">+</button>
        <button class="finishedButt">-</button>
        {{/each}}
    </div>

    <h5 id="lblGEClasses">General Education:</h5>
    <div class="classDiv" id="geClasses">
        {{#each genEdClasses}}
        <h4 class="className">{{text}}</h4>
        <button class="addButt">+</button>
        <button class="finishedButt">-</button>
        {{/each}}
    </div>

    <h5 id="lblOthClasses">Other Classes:</h5>
    <div class="classDiv" id="geClasses">
        <input id="searchInput" type="search"></input>
        <button id="classSearch" type="btn">Search</button>
    </div>

    <hr>
    <hr>
    <footer>
        <div class="container" style="width: 100%; padding: 0px;">
            <a href="/availability"> <button class="btn bckBtn">Back</button></a>
            <a href="/possibleSchedules"> <button class="btn nxtBtn">Generate</button> </a>
        </div>
        <!--//end container -->
    </footer>




</body>

</html>